<div class="well">
	<h5>
	Dealer's Hand: 
	<% session[:dealer_hand].each do |card| %>
		<img src='/images/cards/<%= display_card(card) %>' >
	<% end %>
	</h5>
	<h5>Dealer's Total: <%= hand_value(:dealer_hand) %></h5>
</div>

<div class="well">
	<h5>
	Your Hand:  
	<% session[:player_hand].each do |card| %>
		<img src='/images/cards/<%= display_card(card) %>' >
	<% end %>
	</h5>
	<h5>Your Total: <%= hand_value(:player_hand) %></h5>
</div>

<h5>You do not have enough money to continue playing. Do you wish to put more money in?</h5>

<form id="hit_form" action="/money">
<input type="submit" class="btn btn-success" value="YES">
</form>

<form id="stay_form" action="/goodbye">
<input type="submit" class="btn btn-danger" value="QUIT">
</form>